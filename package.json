{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.3.0",
    "esbuild": "^0.17.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0"
  },
  "scripts": {
    "build": "node ./config/esbuild.config.js",
    "build-std": "esbuild ./app/javascript/application.js --public-path=assets --bundle --outdir=./app/assets/builds --loader:.js=jsx --loader:.svg=file --loader:.jpg=file --loader:.png=file --loader:.gif=file --minify --sourcemap",
    "build-watch": "esbuild ./app/javascript/application.js --public-path=assets --bundle --outdir=./app/assets/builds --loader:.js=jsx --loader:.svg=file --loader:.jpg=file --loader:.png=file --loader:.gif=file --minify --sourcemap --watch",
    "build:css": "sass ./app/assets/stylesheets/application.bootstrap.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules"
  }
}
